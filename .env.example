# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration (optional - defaults to SQLite)
DATABASE_URL=sqlite:///./brand_tracker.db

# Monitoring Configuration
MONITORING_INTERVAL=30  # seconds between checks
MAX_MENTIONS_PER_CHECK=10

# REAL Reddit API Integration (register at reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username

# Twitter/X API (Enterprise tier $42k/month minimum)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Third-party monitoring services (recommended for real data)
BRAND24_API_KEY=your_brand24_api_key  # $50/month for multi-platform
KWATCH_API_KEY=your_kwatch_api_key    # $25/month for Reddit monitoring